{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"module": "es6",
		"moduleResolution": "node",
		"downlevelIteration": true,
		"strict": true,
		"removeComments": true,
		"outDir": "dist/es",
		"declaration": true,
		"declarationDir": "dist/types"
	},
	"include": [
		"lib/**/*.ts"
	],
	"compileOnSave": true
}
